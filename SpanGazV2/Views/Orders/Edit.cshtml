@model SpanGazV2.Models.tbl_607_shipping_request

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <h2 style="margin-left: 15px; color:#ffbe2e">Edit Order</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

    <div class="form-group">
<a style="color:#ffbe2e">Contract</a>
        <div class="col-md-3">
            @Html.DropDownList("FK_order", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FK_order, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <a style="color:#ffbe2e">Order Ref</a>
        <div class="col-md-3">
            @Html.EditorFor(model => model.shipping_request_ref, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.FK_order, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a style="color:#ffbe2e">Request date</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.request_date, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.request_date, "", new { @class = "text-danger" })
            </div>
    </div>

    <div class="form-group">
        <a style="color:#ffbe2e">@Html.LabelFor(model => model.tbl_607_actors.first_name, "FK_ID_UID_actors", htmlAttributes: new { @class = "control-label col-md-2" })</a>
        <div class="col-md-3">
            @Html.DropDownList("FK_ID_actors", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.tbl_607_actors.first_name, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger" style="margin-left: 15px">@Html.ActionLink("Back to List", "Index")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

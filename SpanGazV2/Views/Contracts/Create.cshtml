@model SpanGazV2.Models.tbl_607_order

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="color:#ffbe2e">Create contract</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <a style="color:#ffbe2e">Start Date</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.start_date)
                @Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <a style="color:#ffbe2e">End Date</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.end_date)
                @Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Contract number</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.order_number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.order_number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Shipping request active</a>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.shipping_request_active)
                    @Html.ValidationMessageFor(model => model.shipping_request_active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Reception active</a>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.item_reception_active)
                    @Html.ValidationMessageFor(model => model.item_reception_active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Provider</a>
            <div class="col-md-3">
                @Html.DropDownList("FK_ID_provider", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ID_provider, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
}

<div style="margin-left:15px">
    <button class="btn btn-danger"> @Html.ActionLink("Back to List", "Index") </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/customcompare.js")
}


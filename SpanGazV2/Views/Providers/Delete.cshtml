@model SpanGazV2.Models.tbl_607_provider

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <h2 class="alert alert-danger">Are you sure you want to delete this?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            <a style="color:#ffbe2e">Provider's name</a>
        </dt>

        <dd class="form-control col-md-3">
            @Html.DisplayFor(model => model.provider_name)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Adress</a>
        </dt>

        <dd class="form-control col-md-5">
            @Html.DisplayFor(model => model.adress)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Adress 2</a>
        </dt>

        <dd class="form-control col-md-5">
            @Html.DisplayFor(model => model.adress_compl)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Postal Code</a>
        </dt>

        <dd class="form-control col-md-3">
            @Html.DisplayFor(model => model.cp)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Town</a>
        </dt>

        <dd class="form-control col-md-3">
            @Html.DisplayFor(model => model.town)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Phone</a>
        </dt>

        <dd class="form-control col-md-3">
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
            <a style="color:#ffbe2e">Fax</a>
        </dt>

        <dd class="form-control col-md-3">
            @Html.DisplayFor(model => model.fax)
        </dd>

        <dt>
            <a style="color:#ffbe2e">E-Mail</a>
        </dt>

        <dd class="form-control col-md-5">
            @Html.DisplayFor(model => model.mail)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button type="button" class="btn btn-success" style="margin-right: 5px">@Html.ActionLink("Back to List", "Index")</button>
        </div>
     }
</div>

@model SpanGazV2.Models.tbl_607_comments

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}


<h2 style="margin-left: 15px; color:#ffbe2e">Edit comments</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <a style="color:#ffbe2e">@Html.LabelFor(model => model.ID_UID, htmlAttributes: new { @class = "control-label col-md-2" })</a>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.ID_UID, new { htmlAttributes = new { @class = "form-control", @Value = @User.Identity.Name } })
                            @Html.ValidationMessageFor(model => model.ID_UID, "", new { @class = "text-danger" })
                        </div>
</div>

        <div class="form-group">
            <a style="color:#ffbe2e">@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })</a>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
</div>

        <div class="form-group">
            <a style="color:#ffbe2e">@Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })</a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                        </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger" style="margin-left: 15px">@Html.ActionLink("Back to List", "Index")</button>
</div>

            <a style="color:#ffbe2e">@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @Value = @User.Identity.Name } })

@model SpanGazV2.Models.tbl_607_actors

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 style="color:#ffbe2e">Create actor</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <a style="color:#ffbe2e; margin-left:15px">UID (DOMAIN\UIXnnnnn)</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.id_uid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id_uid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e; margin-left:15px">First Name (Example: John)</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e; margin-left:15px">Last Name (Example: SMITH)</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e; margin-left:15px">Rôle</a>
            <div class="col-md-10">
                @Html.DropDownList("role", null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
}

<div style="margin-left:15px">
    <button class="btn btn-danger"> @Html.ActionLink("Back to List", "Index") </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

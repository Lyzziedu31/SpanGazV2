@model SpanGazV2.Models.tbl_607_bottle

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="color:#ffbe2e">Create bottle</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <a style="color:#ffbe2e">Manufacturer bottle number</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.manufacturer_bottle_number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.manufacturer_bottle_number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Continental bottle number</a>
            <div class="col-md-3">
                @Html.EditorFor(model => model.bottle_conti_number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bottle_conti_number, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-md-2">
                <a style="color:#ffbe2e">Contract number</a>
                <div id="FK_ID_order_details">
                    @Html.DropDownList("FK_ID_order", null, htmlAttributes: new { @class = "form-control", @style = "margin-left:15px", @id = "ddlOrder", onchange = "return GetPostes()" })
                </div>
                <div id="PartialPostes" style="margin-top:15px">
                </div>
            </div>
            <div id="PartialPostesDetails" class="col-md-6" style="margin-left:100px; margin-top:20px">
            </div>
        </div>
        
        <div class="form-group">
            <a style="color:#ffbe2e">Location</a>
            <div class="col-md-3">
                @Html.DropDownList("FK_ID_location", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ID_location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color:#ffbe2e">Shipping delivery number</a>
            <div class="col-md-3">
                @Html.DropDownList("FK_ID_shipping_delivery", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ID_shipping_delivery, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            <a style="color:#ffbe2e">Gaz pressure</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FK_ID_gaz_reporting, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FK_ID_gaz_reporting, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <a style="color:#ffbe2e">Conformity certificate</a>
            <div class="col-md-3">
                @Html.DropDownList("FK_ID_conformity_certificate", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ID_conformity_certificate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-danger" style="margin-left:15px"> @Html.ActionLink("Back to List", "Index") </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    function GetPostes() {
        var order = document.getElementById("ddlOrder").value;
        if (order == 0) {
            return false;
        }
        $.ajax({
            url: '@Url.Action("GetPostes")',
            dataType: "html",
            data: { "IDOrderNumber": order },
            type: "GET",
            contentType: "application/json",
            success: function (response) {
                $('#PartialPostes').html(response);
            },
            error: function (err) {
                alert(err.responseText);
            }
        });
    }
</script>
}
